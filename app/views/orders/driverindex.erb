<div class="background-container">
  <div class= "one">
    <div class="banner">
      <div class="circle">
        <div class="circle-icon">
          <i class="fa-solid fa-dolly fa-2xl" style="color: #ff731d;"></i>
        </div>
      </div>
    </div>
  </div>

<h1 class="my-3">Pending Orders</h1>
<%# <div class="cards"> %>
  <% @orders.each do |order| %>
    <div class="card">
      <div class="card-body">
      <div class="d-flex justify-content-between align-items-center">
        <h5 class="card-title"><%= order.status %></h5>
        <%= button_to "Accept", order_accept_path(order), class: "btn btn-large btn-success", method: :patch %>
      </div>
        <br />
        <p class="card-text">
        <%= order.pickup_at.strftime("%Y-%m-%d %H:%M") %>
        </p>
        <br />
        <strong><%= order.price %></strong> CHF</li>
          <div>
            <button type="button" class="btn btn-blue"
              data-controller="popover"
              data-bs-toggle="popover"
              data-bs-placement="bottom"
              data-bs-content="Pickup adress: <%= order.pickup_address.titleize %> -
              Dropoff adress: <%= order.dropoff_address.titleize %>">
              More details
            </button>
          </div>
      </div>
    </div>
  <% end %>
</div>
