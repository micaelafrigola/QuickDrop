<h1>Orders</h1>
<div class="cards">
  <% @orders.each do |order| %>
  <div class="container">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= order.status %></h5>
          <br />
            <p class="card-text">
            <%= order.pickup_at.strftime("%Y-%m-%d %H:%M") %>
            </p>
              <br />
                <strong><%= order.price %></strong> CHF</li>
      </div>
    </div>
  </div>
  <% end %>
</div>
